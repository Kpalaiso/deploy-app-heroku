                                    <label>Etablissement de l'élève</label> : </label>
                                    <input type="text" class="form-control " id="heure_emission" name="input2" required="required" >
                                    <br/>
            
                                    <label>Date d'inscription de l'élève : </label>
                                    <input type="text" class="form-control " id="date_emission" placeholder="jj/mm/aaaa" name="input3" required="required" >
                                    <br/>  
            
                                         
                               <input type="submit" id="submit" name="envoie" value="Enregistrer" class="btn btn-success btn-block envs " style="background-color:#00aced; border:solid 1px #00aced;"  />
                                
